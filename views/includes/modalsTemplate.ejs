<div class="modal fade" id="modalTemplate" tabindex="-1" role="dialog" aria-labelledby="templateLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="emargementLabel">Nouveau template</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div id="errorTemplate"> </div>

            <form id="templateForm" method="POST" enctype="multipart/form-data">
                <input type="hidden" id="userId" name="userId" value="<%= currentUserId %>">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nom du template</label>
                        <input required type="text" class="form-control" id="name" aria-describedby="name">
                    </div>
                    <div class="form-group">
                        <label for="intitule">Intitulé</label>
                        <input required type="intitule" class="form-control" id="intitule" aria-describedby="intitule">
                    </div>
                    <div class="form-group">
                        <label for="organisme">Organisme de formation</label>
                        <input required type="organisme" class="form-control" id="organisme" aria-describedby="organisme">
                    </div>
                    <div class="form-group">
                        <label for="image">Logo</label>
                        <input required type="file" class="form-control" id="image" aria-describedby="logo">
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="generateTemplateBtn" type="submit" class="btn btn-primary">Générer</button>
                </div>
            </form>
        </div>
    </div>
</div>