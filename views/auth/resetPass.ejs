<% include ../includes/head %>
</head>

<body class="d-flex flex-column align-items-center justify-content-center authentification">
    <div class="bg-white rounded formWidth">
        <div class="text-center w-100 my-3">
            <img class="img-fluid" src="/images/logowebsite.png" alt="Logo Simplon.co">
        </div>

        <form action="<%= isReset ? '/reinitPass' : '/reinitialisation' %>" method="POST">

            <% if(isReset) { %>

                <div class="px-5">
                    <div class="my-5 input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text inputBorder">
                                <span class="iconify iconify__black" data-inline="false" data-icon="uil:padlock"></span>
                            </div>
                        </div>
                        <input type="password" class="form-control inputBorder" name="newpass" placeholder="Nouveau mot de passe">
                    </div>
                    
                    <div class="my-5 input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text inputBorder">
                                <span class="iconify iconify__black" data-inline="false" data-icon="uil:padlock"></span>
                            </div>
                        </div>
                        <input type="password" class="form-control inputBorder" name="newpassconfirm" placeholder="Confirmer votre nouveau mot de passe">
                    </div>
                </div>

            <% } else { %>

                <div class="px-5">
                    <p style="margin-top: -12px;" class="text-center">Veuillez saisir votre adresse email pour réinitialiser votre mot de passe</p>
                    <div class="my-5 input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text inputBorder">
                                <span class="iconify iconify__black" data-inline="false" data-icon="ic:outline-mail-outline"></span>
                            </div>
                        </div>
                        <input type="email" class="form-control inputBorder" name="email" placeholder="Adresse email">
                    </div>
                </div>

            <% } %>

            <div class="w-100 d-flex">
                <a href="/login" class="btn btn-primary w-50 leftBorder py-3">Connexion</a>
                <div class="btnDivider"></div>
                <button type="submit" class="btn btn-secondary w-50 rightBorder py-3"><%= isReset ? 'Confirmer' : 'Réinitialiser' %></button>
            </div>
        </form>
    </div>
</body>

</html>