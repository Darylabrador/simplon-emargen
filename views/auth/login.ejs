<% include ../includes/head %>
</head>

<body>
    <% include ../includes/navigation %>

        <main class="container-fluid d-flex justify-content-center align-items-center">
            <div class="logSignForm my-5 px-5">
                <h3 class="text-center py-4"> Connexion </h3>
                <form action="/login"  class="form" method="POST">
                    <% include ../includes/messageFlash %>
                    
                    <div class="form-group">
                        <label>Adresse email</label>
                        <input name="email" type="mail"
                            class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'border border-danger' : '' %>"
                            required value="<% if(hasError){%><%=oldInput.email%><% } %>">
                    </div>

                    <div class="form-group">
                        <label>Mot de passe</label>
                        <input name="password" type="password"
                            class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'border border-danger' : '' %>"
                            required value="<% if(hasError){%><%=oldInput.password%><% } %>">
                    </div>

                    <div class="col-sm-12 text-center pb-4 mt-5">
                        <button type="submit" class="btn btn-primary logSignBtn"> Se connecter </button>
                    </div>
                    
                </form>
            </div>
    </main>

    <% include ../includes/footer %>

</body>

</html>