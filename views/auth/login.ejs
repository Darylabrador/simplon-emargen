<% include ../includes/head %>
    </head>

    <body class="d-flex flex-column align-items-center justify-content-center authentification" >
        <div class="bg-white rounded formWidth">
          <div class="text-center w-100 my-3">
            <img class="img-fluid" src="/images/logowebsite.png" alt="Logo Simplon.co">
          </div>
          
          <% include ../includes/messageFlash %>

          <form action="/login" method="POST">
            <div class="px-5">
              <div class="my-5 input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                  <div class="input-group-text inputBorder">
                    <span class="iconify iconify__black" data-inline="false" data-icon="ic:outline-mail-outline"></span>
                  </div>
                </div>
                <input required type="email" name="email" 
                placeholder="Adresse email"
                class="form-control inputBorder <%= validationErrors.find(e => e.param === 'email') ? 'border-bottom border-danger' : '' %>"
                value="<% if(hasError){%><%=oldInput.email%><% } %>">
              </div>
              
              <div class="my-5 input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                  <div class="input-group-text inputBorder">
                    <span class="iconify iconify__black" data-inline="false" data-icon="uil:padlock"></span>
                  </div>
                </div>
                <input required type="password" name="password"
                class="form-control inputBorder <%= validationErrors.find(e => e.param === 'password') ? 'border-bottom border-danger' : '' %>" 
                placeholder="Mot de passe">
              </div>
            </div>

            <div class="w-100 d-flex">
              <a href="/reinitialisation" class="btn btn-primary w-50 leftBorder py-3">Mot de passe oubli√©</a>
              <div class="btnDivider"></div>
              <button type="submit" class="btn btn-secondary w-50 rightBorder py-3">Connexion</button>
            </div>

          </form>
        </div>
    </body>

</html>