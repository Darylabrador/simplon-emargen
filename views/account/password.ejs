<% include ../includes/head %>
</head>

<body>
    <% include ../includes/navigation , {
                        isTemplatePage: isTemplatePage, 
                        isEmargementPage: isEmargementPage, 
                        isPromotionPage: isPromotionPage, 
                        isApprenantPage: isApprenantPage
                    } %>
    <main>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 pb-1">
                <% breadcrumb.forEach(element => { %>
                <li class="breadcrumb-item active"><%= element %></li>
                <% }) %>
            </ol>
        </nav>

        <div class="settingHeight60 d-flex justify-content-center align-items-center">
            <div class="formWidth bg-white rounded">
                <h5 class="text-center pt-5 mb-5">Modifications du mot de passe</h5>

                <form action="/admin/settings/password" method="POST">
                    <div class="my-3 input-group mb-2 mr-sm-2 px-5">
                        <input type="password" class="form-control inputBorder" name="oldpass" placeholder="Ancien mot de passe">
                    </div>
                    
                    <div class="my-3 input-group mb-2 mr-sm-2 px-5">
                        <input type="password" class="form-control inputBorder" name="newpass" placeholder="Nouveau mot de passe">
                    </div>

                    <div class="my-3 input-group mb-2 mr-sm-2 px-5">
                        <input type="password" class="form-control inputBorder" name="newpassconfirm" placeholder="Confirmer le mot de passe">
                    </div>

                    <div class="w-100 d-flex mt-5">
                        <a href="/admin" class="btn btn-primary w-50 leftBorder py-3">Annuler</a>
                        <div class="btnDivider"></div>
                        <button type="submit" class="btn btn-secondary w-50 rightBorder py-3"> Modifier </button>
                    </div>

                </form>
            </div>
        </div>
    </main>
    <% include ../includes/footer %>
</body>

</html>